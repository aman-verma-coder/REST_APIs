<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quora</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <h1>Quora</h1>
    <% for (const post of posts) { %>
        <div class="post-box">
            <h2 class="usrnm">
                Username: @<p>
                    <%= post.username %>
                </p>
            </h2>
            <h2 class="cont">
                Content: <p>
                    <%= post.content %>
                </p>
            </h2>
            <a href="http://localhost:8080/posts/<%= post.id %>">View Details</a><br>
            <a href="http://localhost:8080/posts/<%= post.id %>/edit">Edit Post</a>
            <form method="post" action="/posts/<%= post.id %>/delete?_method=DELETE"><button>Delete</button></form>
        </div>
        <% } %>
            <a href="http://localhost:8080/posts/new">Create New Post</a>
</body>

</html>